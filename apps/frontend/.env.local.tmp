# Local dev settings (adjust as needed)
VITE_API_URL=http://192.168.174.128:3001

# ADFS (OIDC PKCE)
VITE_OIDC_AUTHORITY=https://adfs.umc.local/adfs
VITE_OIDC_CLIENT_ID=f4d9aaf4-ee50-47c0-b19c-f6e913332eb7
# Use localhost to satisfy PKCE secure-context requirement without HTTPS
VITE_OIDC_REDIRECT_URI=http://localhost:5173/auth/callback
VITE_OIDC_SCOPE=openid profile
VITE_OIDC_DEBUG=true

# Bypass discovery (CORS on AD FS)
VITE_OIDC_AUTHORIZATION_ENDPOINT=https://adfs.umc.local/adfs/oauth2/authorize/
VITE_OIDC_TOKEN_ENDPOINT=http://192.168.174.128:3001/oidc/token
VITE_OIDC_END_SESSION_ENDPOINT=https://adfs.umc.local/adfs/oauth2/logout/
VITE_OIDC_ISSUER=https://adfs.umc.local/adfs
VITE_OIDC_JWKS_URI=https://adfs.umc.local/adfs/discovery/keys
VITE_OIDC_LOAD_USERINFO=false

# Alternatief (IP-redirect) — voeg deze ook in AD FS toe als extra redirect:
# Let op: PKCE werkt alleen op localhost of in een secure context (HTTPS).
# Voor IP via HTTP zal PKCE in de browser falen. Gebruik hiervoor HTTPS of blijf bij localhost.
